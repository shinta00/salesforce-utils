<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>48.0</apiVersion>
    <isExposed>false</isExposed>

    <isExposed>true</isExposed>
    <masterLabel>Pega Mashup Container</masterLabel>
    <description>Lightning container for Pega mashup</description>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
    </targets>

    <targetConfigs>
        <targetConfig targets="lightning__AppPage, lightning__HomePage, lightning__RecordPage">
            <property name="mashupUrl" label="Mashup URL" description="Pega Mashup URL" placeholder="Enter Pega Mashup URL" type="String" required="true" default="" />
            <property name="mashupHeight" label="Mashup height (in pixels)" placeholder="Enter Mashup Height in pixels" type="String" required="true" default="900px" />
        </targetConfig>
    </targetConfigs>

</LightningComponentBundle>
